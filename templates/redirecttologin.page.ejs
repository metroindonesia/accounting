<!DOCTYPE html>
<html>

<head>
	<title>authentication</title>
	<meta name="viewport"
		content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="theme-color" content="#000000">

	<link rel="manifest" href="/public/manifest.json">
	<link rel="icon" type="image/svg+xml" href="/public/favicon.svg">

</head>

<body>
	redirect to to login page<br>
	click <a id="redirectlink" href="/login">here</a> if page not redirected.
</body>
<script>
	// ambil parameter untuk direct modul open
	// https://core-dev.transfashion.id/?nexturl=https://ent-dev.transfashion.id/sitetype&id=STO

	const urlorigin = window.location.origin
	const queryString = window.location.search
	const params = new URLSearchParams(queryString)
	const nexturl = params.get('nexturl')
	const id = params.get('id')

	const qs = []

	if (nexturl != null) {
		qs.push(`nexturl=${nexturl}`)
	}

	if (id != null) {
		qs.push(`id=${id}`)
	}

	const nextQueryString = qs.join('&')
	const redirectTo = `/login?${nextQueryString}`

	const el = document.getElementById('redirectlink')
	el.setAttribute('href', redirectTo)

	location.href = redirectTo

</script>

</html>